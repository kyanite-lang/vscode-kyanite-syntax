{
    "comments": {
        "lineComment": "#"
    },
    // symbols used as brackets
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "folding": {
        "markers": {
            "start": "\\bdo\\b",
            "end": "\\bend\\b"
        }
    },
    // symbols that are auto closed when typing
    "autoClosingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
    // symbols that can be used to surround a selection
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["do", "end"],
        ["\"", "\""],
        ["'", "'"]
    ],
    "indentationRules": {
        "increaseIndentPattern": "(?:\\b(?:do|then|else)\\b|^\\s*function\\b.*?\\s*$)",
        "decreaseIndentPattern": "end"
    }
}